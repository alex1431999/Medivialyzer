{
  "name": "medivialyzer",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "license": "MIT",
  "author": "alex1431999",
  "scripts": {
    "build": "tsc",
    "watch": "nodemon --exec yarn serve:electron",
    "start": "yarn && concurrently -k \"yarn serve:front\" \"yarn watch\"",
    "serve:front": "cd medivialyzer && yarn dev",
    "serve:electron": "yarn build && wait-on tcp:3000 && electron .",
    "build:front": "cd medivialyzer && yarn build",
    "electron:build": "yarn build",
    "electron:builder": "electron-builder",
    "app:build": "yarn yarn build:front && yarn electron:build && yarn electron:builder",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "json": "^11.0.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0"
  },
  "build": {
    "appId": "com.official-electron-vue.app",
    "productName": "electron Vue Nightly",
    "copyright": "Copyright Â© 2022 ${author}",
    "publish": [
      {
        "provider": "github",
        "owner": "Bible-Projects"
      }
    ],
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      "defaults/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
